<div class="u-box">
    <div class="u-recent-post">
        <div class="p-i-box">
            <h2 class="u-p-title">Post: #<%= @post.id %> by <%= @post.author.name %></h2>
            <h3>Comments: <%= @post.comment_counter%>, Likes: <%= @post.likes_counter %></h3>
        </div>
        <p class="u-p-body"><%= @post.text %></p>

    </div>
    <div class="comment_box">
        <% @comments.each do |comment|%>
            <h3 class="comments"><%= comment.author.name %>:   <%= comment.text %></h3>
        <% end %>
    </div>
    <div class="form_post">
        <%= form_with model: [@post, @post.comments.build] do |form| %>
        <%= form.text_area :text, class: "comment_text", placeholder: "Type your comment here..." %>
        <%= form.submit "Create", class: "form_btn" %>
  <% end %>
    </div>
</div>