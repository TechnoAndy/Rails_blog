<div class="users-container">
    <div class="user-recent-post">
        <div class="post-info-box">
            <h2 class="user-post-title">Post: #<%= @post.id %> by <%= @post.author.name %></h2>
            <h3>Comments: <%= @post.comment_counter%>, Likes: <%= @post.likes_counter %></h3>
        </div>
        <p class="user-post-text"><%= @post.text %></p>

    </div>
    <div class="comment_box">
        <% @comments.each do |comment|%>
            <h3 class="comments"><%= comment.author.name %>:   <%= comment.text %></h3>
            <% if can? :delete, comment %>
                <%= button_to 'Delete comment', delete_user_post_comment_path(current_user, @post, comment), class: "btn_delete_comment", method: :delete %>
                <% end %>
            <% end %>
    </div>
    <% if can? :delete, @post %>
        <%= button_to 'Delete post', delete_user_post_path(current_user, @post), class:"btn_delete_post", method: :delete %>
    <% end %>
</div>